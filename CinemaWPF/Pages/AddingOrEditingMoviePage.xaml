<Page x:Class="CinemaWPF.Pages.AddingOrEditingMoviePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CinemaWPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddingOrEditingMoviePage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="80*"/>
        </Grid.ColumnDefinitions>

        <Button Grid.Row="0" VerticalAlignment="Center" Content="Добавить сеанс" Click="SessionBtn_Click"></Button>
        <Button Grid.Row="1" VerticalAlignment="Center" Content="Каталог" Click="CatalogBtn_Click"></Button>

        <ScrollViewer Grid.Column="1" Grid.RowSpan="4" Height="300" Width="550">
            <StackPanel>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10*"/>
                        <ColumnDefinition Width="17*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Grid.Row="0" Foreground="White" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="12" FontSize="17">Название:</TextBlock>
                    <TextBox Grid.Column="1" Grid.Row="0" x:Name="tbName" VerticalAlignment="Center" Height="27" Background="#FF8153D4" Margin="10" Padding="5 0 5 0" VerticalContentAlignment="Center" Foreground="White" FontSize="12"></TextBox>
                    <TextBlock Grid.Column="0" Grid.Row="1" Foreground="White" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="12" FontSize="17">Страна:</TextBlock>
                    <TextBox Grid.Column="1" Grid.Row="1" x:Name="tbCountry" VerticalAlignment="Center" Height="27" Background="#FF8153D4" Margin="10" Padding="5 0 5 0" VerticalContentAlignment="Center" Foreground="White" FontSize="12"></TextBox>
                    <TextBlock Grid.Column="0" Grid.Row="2" Foreground="White" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="12" FontSize="17" >Жанр:</TextBlock>
                    <TextBox Grid.Column="1" Grid.Row="2" x:Name="tbGenre" VerticalAlignment="Center" Height="27" Background="#FF8153D4" Margin="10" Padding="5 0 5 0" VerticalContentAlignment="Center" Foreground="White" FontSize="12"></TextBox>
                    <TextBlock Grid.Column="0" Grid.Row="3" Foreground="White" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="12" FontSize="17">Режиссер:</TextBlock>
                    <TextBox Grid.Column="1" Grid.Row="3" x:Name="tbRegisseur" VerticalAlignment="Center" Height="27" Background="#FF8153D4" Margin="10" Padding="5 0 5 0" VerticalContentAlignment="Center" Foreground="White" FontSize="12"></TextBox>
                    <TextBlock Grid.Column="0" Grid.Row="4" Foreground="White" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="12" FontSize="17">Сценарий:</TextBlock>
                    <TextBox Grid.Column="1" Grid.Row="4" x:Name="tbScript" VerticalAlignment="Center" Height="27" Background="#FF8153D4" Margin="10" Padding="5 0 5 0" VerticalContentAlignment="Center" Foreground="White" FontSize="12"></TextBox>
                    <TextBlock Grid.Column="0" Grid.Row="5" Foreground="White" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="12" FontSize="17">Продюсер:</TextBlock>
                    <TextBox Grid.Column="1" Grid.Row="5" x:Name="tbProducer" VerticalAlignment="Center" Height="27" Background="#FF8153D4" Margin="10" Padding="5 0 5 0" VerticalContentAlignment="Center" Foreground="White" FontSize="12"></TextBox>
                    <TextBlock Grid.Column="0" Grid.Row="6" Foreground="White" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="12" FontSize="17">Продолжительность:</TextBlock>
                    <TextBox Grid.Column="1" Grid.Row="6" x:Name="tbDuration" VerticalAlignment="Center" Height="27" Background="#FF8153D4" Margin="10" Padding="5 0 5 0" VerticalContentAlignment="Center" Foreground="White" FontSize="12"></TextBox>
                    <TextBlock Grid.Column="0" Grid.Row="7" Foreground="White" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="12" FontSize="17">Цена билета 2D:</TextBlock>
                    <TextBox Grid.Column="1" Grid.Row="7" x:Name="tbPrice2D" VerticalAlignment="Center" Height="27" Background="#FF8153D4" Margin="10" Padding="5 0 5 0" VerticalContentAlignment="Center" Foreground="White" FontSize="12"></TextBox>
                    <TextBlock Grid.Column="0" Grid.Row="8" Foreground="White" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="12" FontSize="17">Цена билета 3D:</TextBlock>
                    <TextBox Grid.Column="1" Grid.Row="8" x:Name="tbPrice3D" VerticalAlignment="Center" Height="27" Background="#FF8153D4" Margin="10" Padding="5 0 5 0" VerticalContentAlignment="Center" Foreground="White" FontSize="12"></TextBox>
                    <TextBlock Grid.Column="0" Grid.Row="9" Foreground="White" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="12" FontSize="17">Цен билета VIP:</TextBlock>
                    <TextBox Grid.Column="1" Grid.Row="9" x:Name="tbPriceVIP" VerticalAlignment="Center" Height="27" Background="#FF8153D4" Margin="10" Padding="5 0 5 0" VerticalContentAlignment="Center" Foreground="White" FontSize="12"></TextBox>
                    <TextBlock Grid.Column="0" Grid.Row="10" Foreground="White" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="12" FontSize="17">Описание:</TextBlock>
                    <TextBox Grid.Column="1" Grid.Row="10" x:Name="tbDescription" VerticalAlignment="Center" Height="27" Background="#FF8153D4" Margin="10" Padding="5 0 5 0" VerticalContentAlignment="Center" Foreground="White" FontSize="12"></TextBox>
                    <TextBlock Grid.Column="0" Grid.Row="11" Foreground="White" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="12" FontSize="17">Постер:</TextBlock>
                    <Button Grid.Column="1" Grid.Row="11" Click="ImageBtn_Click" Content="Добавить картинку"></Button>
                </Grid>
            </StackPanel>
        </ScrollViewer>
        <Button Grid.Column="1" Grid.Row="4" x:Name="btnSaveOrEdit" HorizontalAlignment="Center" VerticalAlignment="Top"></Button>
    </Grid>
</Page>
